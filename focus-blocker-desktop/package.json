{
  "name": "focus-blocker-desktop",
  "version": "1.0.0",
  "description": "Focus Blocker Desktop Application",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "active-win": "^8.0.0",
    "electron-store": "^8.1.0",
    "node-fetch": "^2.7.0",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.focusapp.blocker",
    "productName": "Focus Blocker",
    "directories": {
      "output": "build-v2"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "forceCodeSigning": false,
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": ["x64"]
        }
      ],
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
